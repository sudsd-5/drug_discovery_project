# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyx}]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{json,js}]
indent_style = space
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
