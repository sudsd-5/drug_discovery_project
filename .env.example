# Drug Discovery Platform - Environment Variables
# Copy this file to .env and update with your settings

# Hardware Configuration
CUDA_VISIBLE_DEVICES=0
DTI_DEVICE=cuda

# Training Configuration
DTI_BATCH_SIZE=256
DTI_LEARNING_RATE=0.001
DTI_EPOCHS=100

# Data Paths
DTI_DATA_DIR=data
DTI_RAW_DATA_DIR=data/raw
DTI_PROCESSED_DATA_DIR=data/processed

# Output Paths
DTI_MODEL_DIR=models
DTI_LOG_DIR=logs
DTI_OUTPUT_DIR=output

# Logging
DTI_LOG_LEVEL=INFO
DTI_TENSORBOARD_DIR=runs

# Weights & Biases (wandb)
WANDB_PROJECT=drug-discovery
WANDB_ENTITY=your-username
WANDB_MODE=online  # or offline
# WANDB_API_KEY=your_api_key_here

# Model Configuration
DTI_CONFIG_PATH=dti_config.yaml

# Performance
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4

# Hugging Face (for ESM-2 models)
# HUGGINGFACE_TOKEN=your_token_here
HF_HOME=~/.cache/huggingface

# Debug Mode
DEBUG=false
VERBOSE=false
